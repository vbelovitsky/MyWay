<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StaffActivity">

    <TextView
        android:id="@+id/try_to_find"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:text = "@string/try_to_find"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/staffImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_margin="30dp"
            />
        <Button
            android:id="@+id/confirm"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="@drawable/confirm"/>
        <EditText
            android:id="@+id/editAnswer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="30dp"
            android:inputType="text"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.1">

        <Button
            android:id="@+id/new_staff"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerInside"
            android:background="@drawable/restart_arrow"
            android:layout_margin="7dp"
            />

        <TextView
            android:id="@+id/score"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toEndOf="@id/new_staff"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="40dp"
            android:layout_margin="7dp"/>

        <Button
            android:id="@+id/next_button_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/next_button"
            android:layout_margin="7dp"/>
    </RelativeLayout>

</LinearLayout>