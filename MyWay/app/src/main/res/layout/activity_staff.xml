<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StaffActivity"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/try_to_find"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:text = "@string/try_to_find"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/staffImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_margin="25dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">
            <Button
                android:id="@+id/previousStaff"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/previous_arrow"
                android:layout_margin="10dp"
                android:text=""/>
            <Button
                android:id="@+id/confirmStaff"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_margin="10dp"
                android:text="@string/answer"
                android:background="@color/colorWhite" />
            <Button
                android:id="@+id/nextStaff"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/next_arrow"
                android:layout_margin="10dp"
                android:text=""/>
        </LinearLayout>
        <EditText
            android:id="@+id/editAnswer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="25dp"
            android:inputType="text"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.1">

        <TextView
            android:id="@+id/score"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="40dp"
            android:layout_margin="7dp"/>

        <Button
            android:id="@+id/reset_score"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_toEndOf="@id/score"
            android:background="@drawable/restart_arrow"
            android:layout_margin="7dp"/>

        <Button
            android:id="@+id/next_button_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/next_button"
            android:layout_margin="7dp"/>
    </RelativeLayout>

</LinearLayout>